{
  "name": "halo-tools",
  "version": "1.0.0",
  "description": "Halo Tools System - Extensible tool execution framework for decision trees",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:plugin": "rollup -c rollup.config.js",
    "build:plugin:browser": "TARGET=browser rollup -c rollup.config.js",
    "build:plugin:node": "TARGET=node rollup -c rollup.config.js",
    "build:state-plugin": "rollup -c rollup.state-plugin.config.js",
    "build:state-plugin:prod": "NODE_ENV=production rollup -c rollup.state-plugin.config.js",
    "build:all": "npm run build && npm run build:plugin:node && npm run build:plugin:browser && npm run build:state-plugin",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.0",
    "eventemitter3": "^5.0.1",
    "jsonata": "^2.0.0",
    "jsonpath-plus": "^7.2.0",
    "lodash": "^4.17.21",
    "node-cache": "^5.1.2",
    "p-queue": "^7.4.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.200",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.52.4",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "tools",
    "decision-trees",
    "api",
    "automation",
    "typescript"
  ],
  "author": "Halo Team",
  "license": "MIT"
}
